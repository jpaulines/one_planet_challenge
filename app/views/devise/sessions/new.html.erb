<h3 class="signin header">Sign in</h3>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="signin form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, label: false, placeholder: 'email'  %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, label: false, placeholder: 'password' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn custom" %>
  </div>
    <%= link_to "Re-Take Quiz & Sign-up", quiz_path, class: "btn custom mt-4"%>
<% end %>
<%= render "devise/shared/links" %>

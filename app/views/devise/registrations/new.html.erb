<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <h3 class="text-center">OnePlanet is happy to have you on board!</h3>
      <p class="text-center">Please complete these 3 steps below to register</p>
      <h3 class="signup-header">1. About you</h3>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs signup">
    <%= f.input :first_name, required: true, label: false, placeholder: 'First name' %>
    <%= f.input :last_name, required: true, label: false, placeholder: 'Last name' %>
    <%= f.input :username, required: true, label: false, placeholder: 'Username' %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }, label: false, placeholder: 'email'%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, label: false, placeholder: 'Password' %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },label: false, placeholder: 'Confirm your password' %>
    <%= f.input :address, required: true, label: false, placeholder: 'Address' %>
    <%= f.input :image, required: false, :label => "Your profile image"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up",  class: "btn customgreen" %>
  </div>
<% end %>


</div>
</div>
</div>

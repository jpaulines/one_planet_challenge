<div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-6 col-lg-3">
          <% if @result != nil %>
            <p>People living in <%= @country %> need
              <br>
              <%  @result_complete.times do %>
                <%= image_tag "logo-nocircles.svg" %>
              <%  end %>
              <%= @result %>
              <span> earths </span>
            </p>
          <% else %>
            <%= "This country is not supported by the calcultor at the moment" %>
          <% end %>

    </div>
  </div>
</div>
